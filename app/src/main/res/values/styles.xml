<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextImportant" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/space_basic</item>
    </style>

    <style name="LinearHorizontal" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearVertical" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="UnitText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_input_unit_top_margin</item>
    </style>

    <style name="BasicCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="useCompatPadding">true</item>
        <item name="android:padding">@dimen/space_basic</item>
        <item name="android:layout_marginBottom">@dimen/card_bottom_space</item>
        <item name="android:layout_marginTop">@dimen/card_top_space</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="BasicCardWithContentPadding" parent="BasicCard">
        <item name="contentPadding">@dimen/space_basic</item>
    </style>


    <style name="TextInputLayoutWithValidations" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatisticsItemDetailLayout" parent="Widget.AppCompat.ListView">
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle|end</item>
    </style>

    <style name="StatisticsDetailCardHeader">
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="menu_labels_style">
        <item name="android:background">@drawable/floating_item_bg</item>
        <item name="android:padding">10dp</item>

        <item name="android:textColor">@color/white</item>
    </style>

</resources>
