<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="car"
            type="sk.momosi.carific.model.Car" />

        <variable
            name="listener"
            type="sk.momosi.carific.ui.ListItemUserInteractionListener&lt;sk.momosi.carific.model.Car>" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="@{() -> listener.onItemClick(car)}"
        android:orientation="vertical"
        android:padding="@dimen/space_basic">

        <TextView
            android:id="@+id/expense_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{car.name}"
            android:textAppearance="?android:attr/textAppearanceListItem"
            tools:text="My Civic" />

        <TextView
            android:id="@+id/expense_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{car.manufacturer}"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Honda" />


    </LinearLayout>

</layout>